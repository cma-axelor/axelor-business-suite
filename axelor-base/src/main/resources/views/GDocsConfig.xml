<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid name="gdocs-config-grid" title="GDocs configs" model="com.axelor.apps.base.db.GDocsConfig">
		<field name="company"/>
		<field name="isAuthorized" />
	</grid>

	<form name="gdocs-config-form" title="GDocs configs" model="com.axelor.apps.base.db.GDocsConfig" width="large">
		<panel name="mainPanel">
			<field name="company" form-view="company-form" grid-view="company-grid" colSpan="6"/>
			<field name="isAuthorized" colSpan="6"/>
			<panel showIf="!isAuthorized" colSpan="12">
				<button name="$authorizeAccountBtn" title="Generate authorization url" colSpan="4" onClick="save,action-gsuite-doc-config-method-set-auth-url" />
				<label name="authUrl" title=""/>
			</panel>
		</panel>
		<panel name="modelPanel">
			<field name="configLineList" form-view="gdocs-config-line-form" grid-view="gdocs-config-line-grid" colSpan="12"/>
		</panel>
		<panel>
			<button title="Test" onClick="com.axelor.apps.base.web.GDocsTemplateController:generate" name="testBtn"/>
		</panel>
	</form>
	
	<action-method name="action-gsuite-doc-config-method-set-auth-url">
		<call class="com.axelor.apps.base.web.GDocsConfigController" method="setAuthUrl" />
	</action-method>


</object-views>